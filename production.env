# 生产环境配置
NODE_ENV=production
PORT=3001

# JWT密钥 - 请务必修改为您自己的随机字符串
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# 数据库配置
DATABASE_URL=/app/data/database.sqlite

# 文件上传配置
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=100MB

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379

# 日志级别
LOG_LEVEL=info

# 跨域配置
CORS_ORIGIN=*

# 应用配置
APP_NAME=Amazon FBM CRM
APP_VERSION=1.0.0 